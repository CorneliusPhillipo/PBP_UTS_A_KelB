<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.User_Fragment">
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="center">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/Profile"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="78dp"
            android:layout_marginBottom="30dp"
            android:text="User Profile"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative_layout"
        android:background="?attr/cardbackground"
        android:gravity="top">
        <LinearLayout
            android:id="@+id/linlayNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:gravity="start">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama : "
                android:textColor="?attr/textcolor"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/textcolor"
                android:text="DATA BINDING NAMA"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linlayEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/linlayNama">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textColor="?attr/textcolor"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATA BINDING EMAIL"
                android:textColor="?attr/textcolor"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linlayPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/linlayEmail">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number : "
                android:textColor="?attr/textcolor"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATA BINDING PHONE NUMBER"
                android:textColor="?attr/textcolor"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linlayAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/linlayPhoneNumber">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat : "
                android:textColor="?attr/textcolor"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATA BINDING ALAMAT"
                android:textColor="?attr/textcolor"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linlayUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/linlayAlamat">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username : "
                android:textColor="?attr/textcolor"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATA BINDING USERNAME"
                android:textColor="?attr/textcolor"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>
    </RelativeLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="@string/fab_content_desc"
            app:srcCompat="@drawable/ic_settings"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>